{
    "$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",
    "phasesByName": {
        "build": {
            "cleanFiles": [{ "sourcePath": "dist" }, { "sourcePath": "build" }],
            "tasksByName": {
                "wireguard-go": {
                    "taskPlugin": {
                        "pluginName": "run-script-plugin",
                        "pluginPackage": "@rushstack/heft",
                        "options": {
                            "scriptPath": "./submodules/build.cjs"
                        }
                    }
                },
                "typescript": {
                    "taskDependencies": ["wireguard-go"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-typescript-plugin"
                    }
                },
                "lint": {
                    "taskDependencies": ["typescript"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-lint-plugin"
                    }
                },
                "bundle-cli": {
                    "taskDependencies": ["lint"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-webpack5-plugin",
                        "options": {
                            "configurationPath": "webpack.config.cjs"
                        }
                    }
                },
                "api-docs": {
                    "taskDependencies": ["bundle-cli"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-api-extractor-plugin"
                    }
                }
            }
        },
        "test": {
            "phaseDependencies": ["build"],
            "tasksByName": {
                "jest": {
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-jest-plugin"
                    }
                }
            }
        }
    }
}
