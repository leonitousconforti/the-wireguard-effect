{
    "$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",
    "phasesByName": {
        "build": {
            "cleanFiles": [
                { "sourcePath": "dist" },
                { "sourcePath": "build" },
                { "sourcePath": ".github/actions/workflow-level-service/build" }
            ],
            "tasksByName": {
                "wireguard-go": {
                    "taskPlugin": {
                        "pluginName": "run-script-plugin",
                        "pluginPackage": "@rushstack/heft",
                        "options": {
                            "scriptPath": "./submodules/build.cjs"
                        }
                    }
                },
                "typescript": {
                    "taskDependencies": ["wireguard-go"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-typescript-plugin"
                    }
                },
                "lint": {
                    "taskDependencies": ["typescript"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-lint-plugin"
                    }
                },
                "bundle-actions": {
                    "taskDependencies": ["lint"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-webpack5-plugin",
                        "options": {
                            "configurationPath": "webpack.config.cjs"
                        }
                    }
                },
                "api-docs": {
                    "taskDependencies": ["bundle-actions"],
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-api-extractor-plugin",
                        "options": {
                            "useProjectTypescriptVersion": true
                        }
                    }
                },
                "copy-wireguard-go-executables": {
                    "taskDependencies": ["api-docs"],
                    "taskPlugin": {
                        "pluginName": "copy-files-plugin",
                        "pluginPackage": "@rushstack/heft",
                        "options": {
                            "copyOperations": [
                                {
                                    "hardlink": false,
                                    "sourcePath": "build",
                                    "destinationFolders": ["dist/build"]
                                },
                                {
                                    "hardlink": true,
                                    "sourcePath": "build",
                                    "destinationFolders": [".github/actions/workflow-level-service/build"]
                                }
                            ]
                        }
                    }
                }
            }
        },
        "test": {
            "phaseDependencies": ["build"],
            "tasksByName": {
                "jest": {
                    "taskPlugin": {
                        "pluginPackage": "@rushstack/heft-jest-plugin"
                    }
                }
            }
        }
    }
}
